{
  "swagger": "2.0",
  "info": {
    "title": "Workplace Search API V1",
    "version": "v1",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "127.0.0.3002",
  "basePath": "/api/ws/v1",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "authorization_header": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization"
    }
  },
  "tags": [
    {
      "name": "Documents API",
      "description": "Index, update, and destroy documents from a Custom API Source",
      "externalDocs": {
        "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-custom-sources-api.html"
      }
    },
    {
      "name": "Permissions API",
      "description": "Add, remove, and list Custom API Source document level permissions for a user",
      "externalDocs": {
        "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-document-permissions.html"
      }
    }
  ],
  "parameters": {
    "content_source_key": {
      "name": "content_source_key",
      "type": "string",
      "in": "path",
      "required": true,
      "minLength": 1,
      "description": "Unique key for a Custom API source, provided upon creation of a Custom API Source"
    },
    "document_ids": {
      "name": "document_ids",
      "in": "body",
      "required": true,
      "schema": {
        "type": "array",
        "minItems": 1,
        "maxItems": 100,
        "items": {
          "$ref": "#/definitions/external_id"
        }
      }
    },
    "bulk_documents": {
      "name": "documents",
      "in": "body",
      "required": true,
      "schema": {
        "type": "array",
        "minItems": 1,
        "maxItems": 100,
        "items": {
          "$ref": "#/definitions/document"
        }
      }
    },
    "user": {
      "name": "user",
      "type": "string",
      "in": "path",
      "required": true,
      "minLength": 1,
      "description": "The username in context"
    },
    "permissions": {
      "name": "permissions",
      "in": "body",
      "required": true,
      "description": "Document level security restricts which documents a user is able to return in search results",
      "schema": {
        "$ref": "#/definitions/permissions"
      }
    }
  },
  "definitions": {
    "external_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 800,
      "externalDocs": {
        "description": "Unique ID within a content source",
        "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-api-overview.html#id"
      }
    },
    "document": {
      "type": "object",
      "required": ["title", "body", "url"],
      "properties": {
        "id": {
          "$ref": "#/definitions/external_id"
        },
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "_allow_permissions": {
          "$ref": "#/definitions/permissions"
        },
        "_deny_permissions": {
          "$ref": "#/definitions/permissions"
        }
      },
      "externalDocs": {
        "description": "Unique ID within a content source",
        "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-custom-sources-api.html#index-and-update"
      }
    },
    "document_bulk_response": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "errors"
        ],
        "properties": {
          "id": {
            "$ref": "#/definitions/external_id"
          },
          "errors": {
            "$ref": "#/definitions/document_errors"
          }
        }
      }
    },
    "errors_response": {
      "type": "object",
      "required": [
        "errors"
      ],
      "properties": {
        "errors": {
          "$ref": "#/definitions/document_errors"
        }
      }
    },
    "permissions_meta_page": {
      "type": "object",
      "required": [
        "page"
      ],
      "properties": {
        "page": {
          "type": "object",
          "required": [
            "current",
            "total_pages",
            "total_results",
            "size"
          ],
          "properties": {
            "current": {
              "type": "integer"
            },
            "total_pages": {
              "type": "integer"
            },
            "total_results": {
              "type": "integer"
            },
            "size": {
              "type": "integer"
            }
          }
        }
      }
    },
    "document_errors": {
      "type": "array",
      "maxItems": 1024,
      "items": {
        "type": "string",
        "maxLength": 256
      },
      "externalDocs": {
        "description": "Error message of document in context",
        "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-custom-sources-api.html"
      }
    },
    "permission": {
      "type": "string",
      "maxItems": 256,
      "externalDocs": {
        "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-document-permissions.html",
        "description": "Document level security restricts which documents a user is able to return in search results"
      }
    },
     "permissions": {
      "type": "array",
      "maxItems": 1024,
      "description": "List of permissions",
      "items": {
        "$ref": "#/definitions/permission"
      }
    },
    "user_permissions": {
      "type": "object",
      "required": [
        "user",
        "permissions"
      ],
      "properties": {
        "user": {
          "type": "string"
        },
        "permissions": {
          "$ref": "#/definitions/permissions"
        }
      }
    },
    "list_all_permissions_response": {
      "type": "object",
      "required": [
        "meta",
        "results"
      ],
      "properties": {
        "meta": {
          "$ref": "#/definitions/permissions_meta_page"
        },
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/user_permissions"
          }
        }
      }
    }
  },
  "paths": {
    "/sources/{content_source_key}/documents/bulk_create": {
      "post": {
        "summary": "Indexing one or more documents into a custom content source",
        "externalDocs": {
          "description": "Index new objects into a custom content source or update documents that already exist",
          "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-custom-sources-api.html#index-and-update"
        },
        "tags": [
          "Documents API"
        ],
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "operationId": "indexDocuments",
        "security": [
          {
            "authorization_header": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/content_source_key"
          },
          {
            "$ref": "#/parameters/bulk_documents"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "$ref": "#/definitions/document_bulk_response"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/errors_response"
            }
          },
          "401": {
            "description": "unauthorized"
          },
          "404": {
            "description": "not found"
          },
          "413": {
            "description": "payload too large",
            "schema": {
              "$ref": "#/definitions/errors_response"
            }
          }
        }
      }
    },
    "/sources/{content_source_key}/documents/bulk_destroy": {
      "post": {
        "summary": "Deleting a list of documents from a custom content source",
        "externalDocs": {
          "description": "Remove documents from a Custom API Source",
          "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-custom-sources-api.html#destroy"
        },
        "tags": [
          "Documents API"
        ],
        "operationId": "deleteDocuments",
        "security": [
          {
            "authorization_header": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/content_source_key"
          },
          {
            "$ref": "#/parameters/document_ids"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "$ref": "#/definitions/document_bulk_response"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/errors_response"
            }
          },
          "401": {
            "description": "unauthorized"
          },
          "404": {
            "description": "not found"
          },
          "413": {
            "description": "payload too large",
            "schema": {
              "$ref": "#/definitions/errors_response"
            }
          }
        }
      }
    },
    "/sources/{content_source_key}/permissions": {
      "get": {
        "summary": "List all permissions for all users",
        "externalDocs": {
          "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-document-permissions-api.html#list-all"
        },
        "tags": [
          "Permissions API"
        ],
        "operationId": "listAllPermissions",
        "security": [
          {
            "authorization_header": [

            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/content_source_key"
          },
          {
            "name": "page[current]",
            "in": "query",
            "type": "integer",
            "required": false,
            "x-codegen-param-name": "currentPage"
          },
          {
            "name": "page[size]",
            "in": "query",
            "type": "integer",
            "required": false,
            "x-codegen-param-name": "pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "$ref": "#/definitions/list_all_permissions_response"
            }
          },
          "401": {
            "description": "unauthorized"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/sources/{content_source_key}/permissions/{user}": {
      "get": {
        "summary": "List all permissions for one users",
        "externalDocs": {
          "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-document-permissions-api.html#list-one"
        },
        "tags": [
          "Permissions API"
        ],
        "operationId": "getUserPermissions",
        "security": [
          {
            "authorization_header": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/content_source_key"
          },
          {
            "$ref": "#/parameters/user"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "$ref": "#/definitions/user_permissions"
            }
          },
          "401": {
            "description": "unauthorized"
          },
          "404": {
            "description": "not found"
          }
        }
      },
      "post": {
        "summary": "Add All Permissions: Create a new set of permissions or over-write all existing permissions",
        "externalDocs": {
          "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-document-permissions-api.html#add-all"
        },
        "tags": [
          "Permissions API"
        ],
        "operationId": "updateUserPermissions",
        "security": [
          {
            "authorization_header": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/content_source_key"
          },
          {
            "$ref": "#/parameters/user"
          },
          {
            "$ref": "#/parameters/permissions"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "$ref": "#/definitions/user_permissions"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/errors_response"
            }
          },
          "401": {
            "description": "unauthorized"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/sources/{content_source_key}/permissions/{user}/add": {
      "post": {
        "summary": "Add One Permissions: Add one or more new permissions atop existing permissions",
        "externalDocs": {
          "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-document-permissions-api.html#add"
        },
        "tags": [
          "Permissions API"
        ],
        "operationId": "addUserPermissions",
        "security": [
          {
            "authorization_header": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/content_source_key"
          },
          {
            "$ref": "#/parameters/user"
          },
          {
            "$ref": "#/parameters/permissions"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "$ref": "#/definitions/user_permissions"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/errors_response"
            }
          },
          "401": {
            "description": "unauthorized"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/sources/{content_source_key}/permissions/{user}/remove": {
      "post": {
        "summary": "Remove One Permission: Remove one or more permission from an existing set of permissions",
        "externalDocs": {
          "url": "https://www.elastic.co/guide/en/workplace-search/current/workplace-search-document-permissions-api.html#remove-one"
        },
        "tags": [
          "Permissions API"
        ],
        "operationId": "removeUserPermissions",
        "security": [
          {
            "authorization_header": []
          }
        ],
        "parameters": [
          {
