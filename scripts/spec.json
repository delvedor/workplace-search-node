          },
          {
            "$ref": "#/parameters/user"
          },
          {
            "$ref": "#/parameters/permissions"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "$ref": "#/definitions/user_permissions"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/errors_response"
            }
          },
